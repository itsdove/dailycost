<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.notifications.OverlookFragment">


    <org.eazegraph.lib.charts.PieChart
        android:paddingTop="20dp"
        android:id="@+id/piechart"
        android:layout_width="wrap_content"
        android:layout_height="465dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center">

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="#FFA726"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交通出行"
                android:id="@+id/c1"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="#66BB6A"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吃喝饮食"
                android:id="@+id/c2"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="#EF5350"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通讯费用"
                android:id="@+id/c3"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="#29B6F6"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房租水电"
                android:id="@+id/c4"
                android:paddingLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="#FF00FF"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费购物"
                android:id="@+id/c5"
                android:paddingLeft="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">
            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="#ebe437"/>

            <TextView
                android:id="@+id/c6"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运动健身"
                android:paddingLeft="10dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:paddingTop="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center">

                <View
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#000080"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旅游出行"
                    android:id="@+id/c7"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <View
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#6A5ACD"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基金理财"
                    android:id="@+id/c8"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">
                <View
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#8B8989"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医疗用品"
                    android:id="@+id/c9"
                    android:paddingLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <View
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#FF0000"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日常用品"
                    android:id="@+id/c10"
                    android:paddingLeft="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp">

                <View
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="#FFE1FF"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"
                    android:id="@+id/c11"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sum"
       android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="#00BB92"
        ></TextView>

</LinearLayout>